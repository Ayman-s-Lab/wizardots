# MY LENOVO THINKPAD T460 DEFAULT KEYS ########
# mute/unmute audio f1
super + F1
	pactl set-sink-mute @DEFAULT_SINK@ {true,false}


# - audio volume f2
super + F2
	pactl -- set-sink-volume 0 -10%


# + audio volume f3
super + F3
	pactl -- set-sink-volume 0 +10%


# mute/unmute microphone f4 


# decrease brightness f5
super + F5
	light -U 5


# increase brightness f6
super + F6
	light -A 5


# open webcam f7
super + F7
	mpv --untimed --no-cache --no-osc --no-input-default-bindings --profile=low-latency --input-conf=/dev/null --title=webcam $(ls /dev/video[0,2,4,6,8] | tail -n 1)


# f8
# f9
# f10
# f11
super + F11
	reboot


# shutdown f12
super + F12
	poweroff


################## THE END OF LENOVO SHORTCUTS	######
# show rofi emojis
super + <
	rofi -show emoji

# open gnome screenshot
super + s
	(gnome-screenshot -a &)


# open browser
super + w
	firefox


# open btop
super + v
	(btop &)

# open ranger
super + y
    ranger


